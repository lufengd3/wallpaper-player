. "$(dirname "$0")/_/husky.sh"

if [ -z "$(git diff --name-only tooling/api)" ]; then
  echo "skipping api - no changes detected"
else
  cd tooling/api
  yarn format
  yarn lint-fix
  cd ../..
fi

if [ -z "$(git diff --name-only tooling/cli/node)" ]; then
  echo "skipping cli.js - no changes detected"
else
  cd tooling/cli/node
  yarn format
  cd ../../..
fi
